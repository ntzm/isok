{
    "name": "ntzm/isok",
    "description": "An IDE-friendly, dependency-free, flexible and fast validation library",
    "type": "library",
    "keywords": ["validation"],
    "license": "MIT",
    "require": {
        "php": "^7.3"
    },
    "autoload": {
        "psr-4": {
            "Ntzm\\Isok\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ntzm\\IsokTest\\": "test/"
        }
    },
    "require-dev": {
        "doctrine/coding-standard": "^5.0",
        "phpstan/phpstan": "^0.11.1",
        "phpstan/phpstan-phpunit": "^0.11.0",
        "phpstan/phpstan-strict-rules": "^0.11.0",
        "phpunit/phpunit": "^7.5",
        "vimeo/psalm": "^3.4"
    },
    "scripts": {
        "check": [
            "@test",
            "@cs-check",
            "@stan",
            "psalm"
        ],
        "test": "phpunit",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "stan": "phpstan analyse"
    },
    "config": {
        "sort-packages": true
    }
}
